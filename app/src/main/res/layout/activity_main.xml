<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_number"
        >

    <TextView
        android:id="@+id/numbers_view"
        android:background="?android:attr/selectableItemBackground"
        style="@style/CustomCategoryStyle"
        android:text="@string/numbersText" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_family"
        >
    <TextView
        android:id="@+id/family_members_view"
        style="@style/CustomCategoryStyle"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/familyMemberText" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_color"
        >
    <TextView
        android:id="@+id/colors_view"
        android:background="?android:attr/selectableItemBackground"
        style="@style/CustomCategoryStyle"
        android:text="@string/colorsText" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_phrases"
        >
    <TextView
        android:id="@+id/phrases_view"
        android:background="?android:attr/selectableItemBackground"
        style="@style/CustomCategoryStyle"
        android:text="@string/phrasesText" />
    </FrameLayout>

</LinearLayout>

